<!-- Display items in a grid -->
{{#success_msg}}
  <div class="alert alert-success">{{success_msg}}</div>
{{/success_msg}}

{{#error_msg}}
  <div class="alert alert-danger">{{error_msg}}</div>
{{/error_msg}}
<div class="row">
  {{#items}}
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <p class="card-text">{{description}}</p>
          <p class="card-text">Quantity: {{quantity}}</p>
          <p class="card-text">Use By Date: {{useByDate}}</p>
          <!-- Edit button -->
          <a href="/items/{{_id}}/edit" class="btn btn-primary">Edit</a>
          <!-- Delete form -->
          <form action="/items/{{_id}}?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
  {{/items}}
</div>