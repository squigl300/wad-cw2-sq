<!-- views/pantryForm.mustache -->

<h1>{{#pantry}}Edit Pantry{{/pantry}}{{^pantry}}Add Pantry{{/pantry}}</h1>

<form action="{{#pantry}}/pantries/{{pantry._id}}?_method=PUT{{/pantry}}{{^pantry}}/pantries{{/pantry}}" method="POST">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="{{pantry.name}}" required>
  </div>
  <div>
    <label for="address">Address:</label>
    <input type="text" id="address" name="address" value="{{pantry.address}}" required>
  </div>
  <div>
    <label for="phone">Phone:</label>
    <input type="tel" id="phone" name="phone" value="{{pantry.phone}}" required>
  </div>
  <div>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="{{pantry.email}}" required>
  </div>
  <button type="submit">{{#pantry}}Update Pantry{{/pantry}}{{^pantry}}Add Pantry{{/pantry}}</button>
</form>